<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" app:title="@string/app_name">
    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/settings_personal_title">
        <EditTextPreference
            app:defaultValue="@string/settings_empty_sample"
            app:iconSpaceReserved="false"
            app:key="name"
            app:title="@string/settings_personal_name"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/settings_attorney_main_title"
        app:iconSpaceReserved="false">
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="attorney_main_enabled"
            android:title="@string/settings_attorney_enabled"
            app:iconSpaceReserved="false" />
        <EditTextPreference
            android:key="attorney_main_name"
            android:title="@string/settings_attorney_name"
            app:defaultValue="@string/settings_empty_sample"
            app:iconSpaceReserved="false"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            android:key="attorney_main_phone"
            android:title="@string/settings_attorney_phone"
            app:defaultValue="@string/settings_empty_sample"
            app:iconSpaceReserved="false"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/settings_attorney_alternative_title"
        app:iconSpaceReserved="false">
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="attorney_alternative_enabled"
            android:title="@string/settings_attorney_enabled"
            app:iconSpaceReserved="false" />
        <EditTextPreference
            android:key="attorney_alternative_name"
            android:title="@string/settings_attorney_name"
            app:defaultValue="@string/settings_empty_sample"
            app:iconSpaceReserved="false"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            android:key="attorney_alternative_phone"
            android:title="@string/settings_attorney_phone"
            app:defaultValue="@string/settings_empty_sample"
            app:iconSpaceReserved="false"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>
</PreferenceScreen>